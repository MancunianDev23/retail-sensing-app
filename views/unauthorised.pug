doctype html
html(lang="en")
  head
    title !{title}
    meta(name="viewport" content="width=device-width, initial-scale=1")
    //Favicon
    link(rel="icon" href="/images/unauth.ico" type="image/x-icon")

    //Fonts & Stylesheets
    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Montserrat:400,700')
    link(href='/../vendor/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='/../vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
  body
    .pageContent
      img#lock.img-responsive(src="/../img/access_denied.png")
      h1.message Access Denied!
      h1.message_sml You must be signed in to view this page.
      #buttons
        a.report(href="/") Sign-In
  script(src='js/jquery-1.8.2.min.js')
  script(src='js/scripts.js')
  style(type="text/css").
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        display: table;
        background-color: white;
     /* background-color: #DEDFE2 !important; /* For browsers that do not support gradients */
   /*   background: -webkit-linear-gradient(#A9A9A9, #DCDCDC); /* For Safari 5.1 to 6.0 */
   /*   background: -o-linear-gradient(#ffa31a, #ffff4d); /* For Opera 11.1 to 12.0 */
   /*   background: -moz-linear-gradient(#ffa31a, #ffff4d); /* For Firefox 3.6 to 15 */
       /* background: linear-gradient(#DCDDE0, #DEDFE2); /* Standard syntax */
      }
      
      .pageContent{
        margin: auto;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        width:50%;
        height:65%;
      }

      #lock{
        display: block;
        margin: 0 auto;
        height:60%;
        width:500px;
        z-index:1;
      }

      .message {
        position:relative;
        top:-30%;
        z-index:2;
        background-color:red;
        height:15%;
        border-radius:20px;
        color:white;
        font-family: 'Montserrat';
        font-weight:bold;
        text-align:center;
        font-size: 65px;
      }

      .message_sml {
        position:relative;
        top:-15%;
        text-align:center;
        margin:0 auto;
        color:#FFD700;
        font-weight:bold;
        font-family: 'Montserrat';
        font-size: 40px;
      }

      #buttons{
        position:relative;
        width:100%;
        top:-8%;
        text-align:center;
      }

      .report {
        position:relative;
        display:block;
        width:70%;
        margin:0 auto;
        white-space: nowrap;
        background-color:#1E90FF;
        text-transform: uppercase;
        color: white;
        border: 1px solid #1E90FF;
        padding: 12px 100px;
        font-size: 1.5em;
        border-radius: 20px;
        -moz-border-radius: 20px;
        -webkit-border-radius: 20px;
        -moz-box-shadow:
            0 15px 30px 0 rgba(255,255,255,.25) inset,
            0 2px 7px 0 rgba(0,0,0,.2);
        -webkit-box-shadow:
            0 15px 30px 0 rgba(255,255,255,.25) inset,
            0 2px 7px 0 rgba(0,0,0,.2);
        box-shadow:
            0 15px 30px 0 rgba(255,255,255,.25) inset,
            0 2px 7px 0 rgba(0,0,0,.2);
        font-family: 'PT Sans', Helvetica, Arial, sans-serif;
      }

      .report:hover {
        text-decoration: none;
      }
      @media (max-width: 1035px){
        .message {
          font-size: 55px;
        }
      }
      @media (max-width: 876px){
        .report{
          display:block;
          margin:0 auto;
          width:70%;
          font-size: 20px;
        }
      }
      @media (max-width: 876px){
        .message {
          font-size: 45px;
        }
        .message_sml{
          font-size:1.5em;
        }
      }
      @media (max-width: 770px){
         #lock{
          height:40%;
          width:500px;
          z-index:1;
        }
        
      }

      @media (max-width: 716px){
        .message{
          font-size:2em;
        }
        .message_sml{
          font-size:1.5em;
        }
      }

      @media (max-width: 500px){
        .message{
          font-size:2em;
        }
        .message_sml{
          font-size:1.5em;
        }
        .report{ 
          display:block;
          margin:0 auto;
          width:70%;
          font-size: 1em;
          padding:12px 80px;
        }
      }