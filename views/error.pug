doctype html
html(lang="en")
  head
    title !{title}
    meta(name="viewport" content="width=device-width, initial-scale=1")
    //Favicon
    link(rel="icon" href="/images/unauth.ico" type="image/x-icon")

    //Fonts & Stylesheets
    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Montserrat:400,700')
    link(href='/../vendor/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='/../vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
  body
    .pageContent
      h1.message !{error}
      h1.message_sml !{desc}
      h1.message_sml2 !{message}
      #buttons
        a.report(href="/")
          span.fa.fa-sign-in.fa-fw
          |  Sign-In
  script(src='js/jquery-1.8.2.min.js')
  script(src='js/scripts.js')
  style(type="text/css").
    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      display: table;
     /* background-color: #DEDFE2 !important; /* For browsers that do not support gradients */
   /*   background: -webkit-linear-gradient(#A9A9A9, #DCDCDC); /* For Safari 5.1 to 6.0 */
   /*   background: -o-linear-gradient(#ffa31a, #ffff4d); /* For Opera 11.1 to 12.0 */
    /*  background: -moz-linear-gradient(#ffa31a, #ffff4d); /* For Firefox 3.6 to 15 */
      background: white; /* Standard syntax */
    }
    .pageContent{
      margin: auto;
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      width:50%;
      height:65%;
      /*border-radius: 20px;
      border: 0.5px solid #D3D3D3;
      box-shadow: 0 10px 6px -6px #A9A9A9;*/
    }

    .message {
      /*text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;*/
      color:#337ab7;
      font-family: 'Lucida Console';
      text-align:center;
      font-size: 240px;
      text-shadow: 5px 5px black;
    }

    .message_sml {
      text-align:center;
      margin:0 auto 25px auto;
     /* text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;*/
      color:#337ab7;
      font-weight:bold;
      font-family: 'Montserrat';
      font-size: 40px;
      text-shadow: 0px 2px grey;
    }

    .message_sml2 {
      text-align:center;
      margin:0 auto 25px auto;
      color:black;
      font-family: 'Montserrat';
      font-size: 22px;
    }

    .report {
      display:block;
      width:70%;
      margin:0 auto;
      text-align:center;
      background-color:orange;
      white-space: nowrap;
      text-transform: uppercase;
      color: white;
      border: 1px solid #1E90FF;
      padding: 12px 100px;
      font-weight: 400;
      font-size: 1.5em;
      border-radius: 20px;
      -moz-border-radius: 20px;
      -webkit-border-radius: 20px;
      -moz-box-shadow:
          0 15px 30px 0 rgba(255,255,255,.25) inset,
          0 2px 7px 0 rgba(0,0,0,.2);
      -webkit-box-shadow:
          0 15px 30px 0 rgba(255,255,255,.25) inset,
          0 2px 7px 0 rgba(0,0,0,.2);
      box-shadow:
          0 15px 30px 0 rgba(255,255,255,.25) inset,
          0 2px 7px 0 rgba(0,0,0,.2);
      font-family: 'PT Sans', Helvetica, Arial, sans-serif;
    }

    .report:hover {
      text-decoration: none;
    }

    @media (max-width: 770px){
      .pageContent{
        width:100%;
      }
      .report{
        padding:9px 10px;
      }
      #buttons{
        margin: 0 auto;
      }
    }

    @media (max-width: 500px){
      .report{
        padding:9px 10px;
      }
      .pageContent{
        width:100%;
      }
      .message{
          font-size:9em;
      }
      .message_sml{
        font-size:2em;
      }
      .message_sml2{
        font-size:2em;
      }
      .report{ 
        display:block;
        margin:0 auto;
      }
    }